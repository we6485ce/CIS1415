# Chapter 8.17 soccer team roster
# Function that prints menu
def menu():
    print("\nMENU\na - Add player\nd - Remove player\nu - Update player rating\nr - Output players above a rating\no - Output roster\nq - Quit")

# Function that adds player to a roster
def addPlayer(roster):
    # Reading jersey numbers
    jersey = int(input("Enter a new player's jersey number:\n"))
    # Reading rating
    rating = int(input("Enter the player's rating:\n"))
    roster[jersey] = rating

# Function that ouputs roster
def outputRoster(roster):
    print("ROSTER")
    # Sorting and printing
    sortedRoster = sorted(roster.keys())
    # Looping over each element in the dictionary and printing to console  
    for jersey in sortedRoster:
        print("Jersey number: " + str(jersey) + ", Rating: " + str(roster[jersey]))
        
# Function that deletes a player from the roster
def deletePlayer(roster):
    # Reading jersey numbers
    jersey = int(input("Enter a jersey number:\n"))
    # Searching for jersey number
    if jersey in roster.keys(): 
        # Deleting entry
        del roster[jersey]
  
# Function that updates a player's rating      
def updatePlayer(roster):
    # Reading jersey numbers
    jersey = int(input("Enter a jersey number:\n"))
    # Searching for jersey number
    if jersey in roster.keys():
        # Reading rating
        rating = int(input("Enter a new rating for player:\n"))
        # Updating dictionary
        roster[jersey] = rating

# Function that displays player's ratings greater than the user input value      
def aboveRating(roster):
    # Reading rating
    rating = int(input("Enter a rating:\n"))
    print("ABOVE", str(rating))
    # Sorting and printing
    sortedRoster = sorted(roster.keys())
    # Looping over each element in the dictionary and printing to console  
    for jersey in sortedRoster:
        # Printing values above the rating
        if roster[jersey] > rating:
            print("Jersey number: " + str(jersey) + ", Rating: " + str(roster[jersey]))

roster = {}
i = 1
# Storing five player details
for i in range(1,6):
    # Reading jersey numbers
    jersey = int(input("Enter player " + str(i) + "'s jersey number:\n"))
    # Reading rating
    rating = int(input("Enter player " + str(i) + "'s rating:\n"))
    print()
    roster[jersey] = rating
outputRoster(roster)
# Loop untill user wants to quit
while True:
    menu()
    # Reading option from user
    option = input("\nChoose an option:\n")
    # Calling appropriate function
    if option == 'a':
        addPlayer(roster)
    elif option == 'd':
        deletePlayer(roster)
    elif option == 'o':
        outputRoster(roster)
    elif option == 'u':
        updatePlayer(roster)
    elif option == 'r':
        aboveRating(roster)
    elif option == 'q':
        break
