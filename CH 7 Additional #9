#Function to count number of consonants
def num_consonants(my_string):
    consonants = "bcdfghjklmnpqrstvwxyz"
    count = 0
    for x in my_string.lower():
        if x in consonants:
            count += 1
    return count        

#Function to count number of vowels
def num_vowels(my_string):
    vowels = "aeiou"
    count = 0
    for x in my_string.lower():
        if x in vowels:
            count += 1
    return count        

my_string = input('Enter a string:')
print('Number of vowels:', num_vowels(my_string))
print('Number of consonants:', num_consonants(my_string))
